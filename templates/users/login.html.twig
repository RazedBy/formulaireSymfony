{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<style>
    .flex{
        display : flex;
        flex-direction : row;
    }

    button{
        margin-right : 20px;
    }
</style>

<div class="container">

  
  <form #emailForm="ngForm">
    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="userEmail" >
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name = "userPassword" >
      <label for="floatingPassword">Password</label>
    </div>
    <div class="flex">
    <div class="form-floating box">
      <button type="submit" class="btn btn-secondary" style="margin-top: 30px;">OK</button>
    </div>
    <div class="form-floating box">
      <button class="btn btn-secondary" style="margin-top: 30px;">Users List</button>
    </div>
    <div class="form-floating box">
      <button type="submit" class="btn btn-secondary" style="margin-top: 30px;" >Add User</button>
    </div>
  </div>
</form>
</div>

{% endblock %}